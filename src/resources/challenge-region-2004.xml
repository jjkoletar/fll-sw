<?xml version="1.0" encoding="UTF-8"?>
<fll xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="fll.xsd"
     title="FLL 2004 Challenge: No Limits" >

  <Performance weight="1.0">

    <goal name="serve_dinner"
	  title="Serve Dinner">
      <value score="45" title="Full" value="full" />
      <value score="35" title="Partial" value="partial" />
    </goal>

    <goal name="open_gate"
	  title="Open the Gate">
      <value score="35" title="Full" value="full" />
      <value score="20" title="Partial" value="partial" />
    </goal>

    <goal name="play_ball"
	  title="Each Ball in Your Side of Basket"
          max="16"
          multiplier="5" />

    <goal name="ball_center"
          title="Your Ball in Center Ring"
          multiplier="50" />

    <goal name="bonus"
	  title="Bonus: Each Ball in Your Side NOT in the Basket"
          max="16"
          multiplier="2" />

    <restriction lowerBound="0"
		 upperBound="16"
                 message="There are a maximum of 8 balls on the table"
                 >
      <term goal="play_ball" />
      <term goal="bonus" />
    </restriction>

    <goal name="push_chairs"
	  title="Push in the Chairs"
          max="3"
          multiplier="10" />

    <goal name="read_sign"
	  title="Read the Bus Route Signs"
          multiplier="35" />

    <goal name="cd"
	  title="Put the CD Away">
      <value score="40" title="Full" value="full" />
      <value score="35" title="Partial" value="partial" />
    </goal>

    <goal name="feed_pets"
	  title="Feed the Pets"
          max="3"
          multiplier="15" />

     <goal name="remove_glasses"
           title="Remove the Glasses"
           multiplier="40" />

    <goal name="climb_stairs"
	  title="Climb the Stairs">
      <value score="45" title="Full" value="full" />
      <value score="40" title="Partial" value="partial" />
    </goal>

    <tiebreaker>
      <test goal="climb_stairs" winner="high" />
    </tiebreaker>

  </Performance>

  <subjectiveCategory name="Teamwork"
                      title="Teamwork"
                      weight="1.0"
                      >
    <goal name="roles"
          title="Roles and Responsibilities"
          min="1"
          max="20" />
    <goal name="professionalism"
          title="Gracious Professionalism"
          min="1"
          max="20" />
    <goal name="dynamics"
          title="Problem Solving & Team Dynamics & Communications"
          min="1"
          max="20" />
    <goal name="confidence"
          title="Confidence & Enthusiasm"
          min="1"
          max="20" />
    <goal name="values"
          title="FLL Values"
          min="1"
          max="20" />
  </subjectiveCategory>

  
  <subjectiveCategory name="RobustDesign"
                      title="Robust Design"
                      weight="1.0"
                      >
    <goal name="structural"
          title="Structural Design"
          min="1"
          max="20" />
    <goal name="locomotion"
          title="Locomotion"
          min="1"
          max="20" />
    <goal name="manipulation"
          title="Manipulation"
          min="1"
          max="20" />
    <goal name="navigation"
          title="Navigation"
          min="1"
          max="20" />
    <goal name="OverallDesign"
          title="Overall Design"
          min="1"
          max="20" />
  </subjectiveCategory>


  <subjectiveCategory name="Programming"
                      title="Robust Programming"
                      weight="1.0"
                      >
    <goal name="UseOfLanguage"
          title="Use of Language"
          min="1"
          max="20" />
    <goal name="Modularity"
          title="Modularity/Abstraction"
          min="1"
          max="20" />
    <goal name="SensorControl"
          title="Sensor Control"
          min="1"
          max="20" />
    <goal name="Design"
          title="Design"
          min="1"
          max="20" />
    <goal name="ProgrammingInGeneral"
          title="In General"
          min="1"
          max="20" />
  </subjectiveCategory>

  <subjectiveCategory name="project_assessment"
                      title="Project Assessment"
                      weight="1.0"
                      >
    <goal name="questions"
          title="Questions, Language Use"
          min="1"
          max="20" />
    <goal name="completeness"
          title="Completeness, Teamwork"
          min="1"
          max="20" />
    <goal name="background"
          title="Background, Data, and Graphics"
          min="1"
          max="20" />
    <goal name="analysis"
          title="Analysis and Conclusions"
          min="1"
          max="20" />
    <goal name="style"
          title="Style"
          min="1"
          max="20" />
  </subjectiveCategory>

  
</fll>
