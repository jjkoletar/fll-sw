<?xml version="1.0" encoding="UTF-8"?>
<fll xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="fll.xsd"
     title="FLL 2003 Challenge: Mission Mars" >

  <Performance weight="0.25">

    <goal name="exit_base"
	  title="Exit the Tetrahedron Base"
	  multiplier="39" />

    <goal name="launch_canister"
	  title="Launch The Sample Canister">
      <value score="39" title="Canister Launched" value="launched" />
      <value score="27" title="Launcher Actived Empty" value="empty" />
      <value score="0" title="Canister Not Launched" value="zero" />
    </goal>

    <goal name="clear_solar"
	  title="Clear The Solar Panel">
      <value score="43" title="Dust Completely Cleared" value="completely" />
      <value score="31" title="Dust Partially Cleared" value="partially" />
      <value score="0" title="Dust Not Cleared" value="zero" />
    </goal>

    <goal name="habitation_modules"
	  title="Connect The 180 And 90 Habitation Modules">
      <value score="49" title="V-Shaped Module Connection" value="v" />
      <value score="31" title="Two Module Connections In Line" value="two" />
      <value score="27" title="One Module Connection" value="one" />
      <value score="0" title="Zero Module Connections" value="zero" />
    </goal>

    <goal name="alliance_habitation"
	  title="Complete The Alliance Habitation Module"
	  multiplier="43" />

    <goal name="free_rover"
	  title="Free the Rover">
      <value score="43" title="Rover In Base" value="base" />
      <value score="31" title="Rover Off Dune + On Wheels" value="wheels" />
      <value score="0" title="Rover Not Freed" value="zero" />
    </goal>

    <goal name="ice_core"
	  title="Move Ice Cores to Base">
      <value score="49" title="3 Ice Cores In Base" value="three" />
      <value score="31" title="2 Ice Cores In Base" value="two" />
      <value score="27" title="1 Ice Core In Base" value="one" />
      <value score="0" title="0 Ice Cores In Base" value="zero" />
    </goal>

    <goal name="boulders_outside_circle"
	  title="Boulders On The Field Outside The Launch Circle"
          max="4"
	  multiplier="8"
          initialValue="2" />

    <goal name="boulders_in_circle"
	  title="Boulders In The Launch Circle"
          max="4"
	  multiplier="14"
          initialValue="2" />

    <goal name="vehicle"
	  title="All Terrain Vehicle Test"
	  multiplier="39" />

    <restriction lowerBound="0"
		 upperBound="4"
                 message="There are a maximum of 4 boulders on the table"
                 >
      <term goal="boulders_in_circle" />
      <term goal="boulders_outside_circle" />
    </restriction>

    <goal name="Interference"
	  title="Did the team deliberately interfere with the other team?"
	  multiplier="0" />

    <tiebreaker>
      <test goal="Interference" winner="low" />
    </tiebreaker>

  </Performance>

  <subjectiveCategory name="InnovativeDesign"
                      title="Innovative Design"
                      weight="0.0"
                      >
    <goal name="inFunction"
          title="Creativity in Function"
          min="1"
          max="20" />
    <goal name="Uniqueness"
          title="Uniqueness"
          min="1"
          max="20" />
    <goal name="inDesignProcess"
          title="Creativity in Design Process"
          min="1"
          max="20" />
    <goal name="inDesignAndAppearance"
          title="Creativity in Design and Appearance"
          min="1"
          max="20" />
    <goal name="OverallCreativity"
          title="Overall Design and Integration"
          min="1"
          max="20" />
  </subjectiveCategory>

  <subjectiveCategory name="RobustDesign"
                      title="Robust Design"
                      weight="0.125"
                      >
    <goal name="Structural"
          title="Structural Design"
          min="1"
          max="20" />
    <goal name="Locomotion"
          title="Locomotion"
          min="1"
          max="20" />
    <goal name="Manipulation"
          title="Manipulation"
          min="1"
          max="20" />
    <goal name="Navigation"
          title="Navigation"
          min="1"
          max="20" />
    <goal name="OverallDesign"
          title="Overall Design and Integration"
          min="1"
          max="20" />
  </subjectiveCategory>


  <subjectiveCategory name="ResearchQuality"
                      title="Research Quality"
                      weight="0.15"
                      >
    <goal name="Research"
          title="Research"
          min="1"
          max="20" />
    <goal name="Knowledge"
          title="Knowldege"
          min="1"
          max="20" />
    <goal name="ChallengeSpecific"
          title="Challenge Specific"
          min="1"
          max="20" />
  </subjectiveCategory>


  <subjectiveCategory name="CreativePresentation"
                      title="Presentation"
                      weight="0.05"
                      >
    <goal name="Presentation"
          title="Presentation"
          min="1"
          max="20" />
  </subjectiveCategory>

  <subjectiveCategory name="InnovativeSolution"
                      title="Innovative Solution"
                      weight="0.05"
                      >
    <goal name="Innovation"
          title="Innovation"
          min="1"
          max="20" />
  </subjectiveCategory>

  <subjectiveCategory name="Programming"
                      title="Programming"
                      weight="0.125"
                      >
    <goal name="Language"
          title="Language used">
      <value title="RIS"/>
      <value title="RoboLab"/>
      <value title="Unknown"/>
    </goal>
    <goal name="UseOfLanguage"
          title="Use of Language"
          min="1"
          max="20" />
    <goal name="Modularity"
          title="Modularity/Abstraction"
          min="1"
          max="20" />
    <goal name="SensorControl"
          title="Sensor Control"
          min="1"
          max="20" />
    <goal name="Design"
          title="Design"
          min="1"
          max="20" />
    <goal name="ProgrammingInGeneral"
          title="In General"
          min="1"
