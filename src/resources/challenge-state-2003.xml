  <subjectiveCategory name="Teamwork"
                      title="Teamwork"
                      weight="0.25"
                      >
    <goal name="TeamIntegration"
          title="Team Integration"
          min="1"
          max="20" />
    <goal name="Respect"
          title="Respect"
