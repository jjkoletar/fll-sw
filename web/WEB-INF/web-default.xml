<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>FLL 2003</display-name>

  <description>
    This is the web application for First Lego League 2003
  </description>

  <context-param>
    <param-name>database_host</param-name>
    <param-value>localhost</param-value>
    <description>
      Machine that the databse is running on.  
    </description>
  </context-param>

  <session-config>
    <session-timeout>30</session-timeout> <!-- 30 minutes -->
  </session-config>

  <welcome-file-list>
    <welcome-file>
            index.jsp
    </welcome-file>
  </welcome-file-list>

  <!-- at some point we may want to specialize this by exception -->
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/errorHandler.jsp</location>
  </error-page>

  <taglib>
    <taglib-uri>http://jakarta.apache.org/taglibs/string-1.0.1</taglib-uri>
    <taglib-location>/WEB-INF/tld/taglibs-string.tld</taglib-location>
  </taglib>

</web-app>
