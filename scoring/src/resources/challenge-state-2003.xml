<?xml version="1.0" encoding="UTF-8"?>
<fll xmlns="http://www.hightechkids.org"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://www.hightechkids.org fll.xsd"
     title="FLL 2002 Challenge: City Sights" >

  <Performance weight="0.25">

    <goal name="exit_base"
	  title="Exit the Tetrahedron Base"
	  multiplier="39" />

    <goal name="launch_canister"
	  title="Launch the Sample Canister">
      <value score="39">Canister Launched</value>
      <value score="27">Launcher Actived Empty</value>
    </goal>

    <goal name="clear_solar"
	  title="Clear the Solar Panel">
      <value score="43">Dust Completly Cleared</value>
      <value score="31">Dust Partially Cleared</value>
    </goal>

    <goal name="habitation_modules"
	  title="Connect the 180 and 90 Habitation Modules">
      <value score="49">V-Shaped Module COnnection</value>
      <value score="31">Two Module Connections In Line</value>
      <value score="27">One Module Connection</value>
    </goal>

    <goal name="alliance_habitation"
	  title="Complete the Alliance Habitation Module"
	  multiplier="43" />

    <goal name="free_rover"
	  title="Free the Rover">
      <value score="43">Rover In Base</value>
      <value score="31">Rover Off Dune + On Wheels</value>
    </goal>

    <goal name="ice_core"
	  title="Move Ice Cores to Base">
      <value score="49">3 Ice Cores in Base</value>
      <value score="31">2 Ice Cores in Base</value>
      <value score="27">1 Ice Cores in Base</value>
    </goal>

    <goal name="boulders_in_circle"
	  title="Boulders In The Launch Circle"
          max="4"
	  multiplier="14" />

    <goal name="boulders_outside_circle"
	  title="Boulders On the Field Outside The Launch Circle"
          max="4"
	  multiplier="8" />

    <goal name="vehicle"
	  title="All Terrain Vehicle Test"
	  multiplier="39" />

    <restriction lowerBound="0"
		 upperBound="4">
      <term goal="boulders_in_circle" />
      <term goal="boulders_outside_circle" />
    </restriction>

    <tiebreaker>
    </tiebreaker>

  </Performance>

