 <Performance minimumScore="0" weight="1.0">

  <goal name="bury_cabon_dioxide" title="Bury Carbon Dioxide"
   multiplier="5" max="4" />
    <!-- FIXME need to know max -->
    
  <goal name="construct_levees_red"
   title="Construct Levees touching RED" multiplier="5"
      max="8" />

  <goal name="construct_levees_green"
   title="Construct Levees touching GREEN" multiplier="4"
      max="8" />
    <restriction lowerBound="0" upperBound="8"
      message="There are only 3 levees on the table">
      <term goal="construct_levees_red" scoreType="raw"/>
      <term goal="construct_levees_green" scoreType="raw"/>
    </restriction>
    
  <goal name="test_levees" title="Test Levees"
      multiplier="15" />

  <goal name="raise_flood_barrier" title="Raise The Flood Barrier" multiplier="15" />

  <goal name="elevate_house" title="Elevate The House" multiplier="25" />

  <goal name="turn_off_lights" title="Turn Off The Lights" multiplier="20"/>

  <goal name="open_window" title="Open A Window"
   multiplier="25"/>

  <goal name="get_people_together_pink" title="Three or more red/white citizens touching the pink"
   multiplier="10" />

  <goal name="get_people_together_green" title="Three or more blue/gray leaders touching the green mountain and/or city"
   multiplier="10" />

  <goal name="get_people_together_research" title="Three or more black/white scientists touching the research area"
   multiplier="10" />
    
  <goal name="find_agreement" title="Align the Arrows"
   multiplier="40" />

  <goal name="fund_research" title="Fund Research or Corrective Action" multiplier="15" />

  <goal name="deliver_machine" title="Deliver An Ice Core Drilling Machine" multiplier="20" />

  <goal name="drill_assembly" title="Drill Assembly Raised Completely Vertical" multiplier="10" />
    
  <goal name="extract_sample" title="Extract An Ice Core Sample" multiplier="20" />

  <goal name="ice_core_base" title="Ice Core IN Base" multiplier="10" />

  <goal name="deliver_buoy" title="Deliver An Ice Buoy" multiplier="25" />

  <goal name="insulate_house" title="Insulte A House"
   multiplier="10" />

  <goal name="ride_bicycle" title="Ride A Bicycle" multiplier="10" />

  <goal name="telecommute" title="Telecommute And Research" multiplier="10" />

  <goal name="study_wildlife_bear" title="Study Wildlife - Bear"
      initialValue="0">
      <value score="15" title="Upright" value="upright"/>
      <value score="10" title="Sleeping" value="sleeping"/>
      <value score="0" title="None" value="none"/>
  </goal>

  <goal name="study_wildlife_snowmobile" title="Study Wildlife - Snowmobile" multiplier="10" />
    
    <goal name="beat_clock" title="Beat the Clock"
      initialValue="0"
      >
      <value score="15" title="Research Area" value="research_area"/>
      <value score="10" title="Yellow Grid Area" value="yellow_area"/>
      <value score="0" title="None" value="none"/>
    </goal>

    <!-- FIXME need tiebreaker -->
  <tiebreaker>
   <test winner='high'>
     <term goal='beat_clock' scoreType='computed'/>
   </test>
  </tiebreaker>

